      <form class="user-facts user-information__some-facts"
            action="/profile/edit/{{me.id}}"
      >
      <div class="user-fact user-facts__elem">
        <label for="lastname">Фамилия</label>
        {{#if me.profile.lastname}}
          <input type="text" name="lastname" id="lastname" autocomplete="off" required
                 value="{{me.profile.lastname}}" />
        {{else}}
          <input type="text" name="lastname" id="lastname" autocomplete="off" required value="-" />
        {{/if}}
      </div>
      <div class="user-fact user-facts__elem">
        <label for="firstname">Имя</label>
        {{#if me.profile.firstname}}
          <input type="text" name="firstname" id="firstname" autocomplete="off" required
                 value="{{me.profile.firstname}}" />
        {{else}}
          <input type="text" name="firstname" id="firstname" autocomplete="off" required value="-" />
        {{/if}}
      </div>
      <div class="user-fact user-facts__elem">
        <label for="surname">Отчество</label>
        {{#if me.profile.surname}}
          <input type="text" name="surname" id="surname" autocomplete="off" required value="{{me.profile.surname}}" />
        {{else}}
          <input type="text" name="surname" id="surname" autocomplete="off" required value="-" />
        {{/if}}
      </div>
      <div class="user-fact user-facts__elem">
        <label for="city">Город</label>
        {{#if me.profile.city}}
          <input type="text" name="city" id="city" autocomplete="off" required value="{{me.profile.city}}" />
        {{else}}
          <input type="text" name="city" id="city" autocomplete="off" required value="-" />
        {{/if}}
      </div>
      <div class="user-fact user-facts__elem">
        <label for="school">Школа</label>
        {{#if me.profile.school}}
          <input type="text" name="school" id="school" autocomplete="off" required value="{{me.profile.school}}" />
        {{else}}
          <input type="text" name="school" id="school" autocomplete="off" required value="-" />
        {{/if}}
      </div>
      <div class="user-fact user-facts__elem">
        <label for="university">Университет</label>
        {{#if me.profile.university}}
          <input type="text" name="university" id="university" autocomplete="off" required
                 value="{{me.profile.university}}" />
        {{else}}
          <input type="text" name="university" id="university" autocomplete="off" required value="-" />
        {{/if}}
